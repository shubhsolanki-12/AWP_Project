<% layout('/layouts/boilerplate') %>
<div class="row mt-3">
  <div class="col-8 offset-2" >

  <h2>Edit the Listing</h2>
  <form action="/listings/<%= listing._id  %>?_method=PUT " method="post" novalidate class="needs-validation">
    <div class="md-3">
      <label for="listing[title]" class="form-label">Title: </label>
      <textarea name="listing[title]" cols="30" rows="1" class="form-control" required><%= listing.title%></textarea>
      <div class="valid-feedback">Title looks good</div>
    </div>

    <div class="md-3">
      <label for="listing[description]" class="form-label">Description: </label>
      <textarea name="listing[description]"  cols="30" rows="3" class="form-control" required><%= listing.description %></textarea>
      <div class="invalid-feedback">Please enter a short description</div>
    </div>

    <div class="md-3">
      <label for="listing[image][url]" class="form-label">Image: </label>
      <textarea name="listing[image][url]" cols="50" rows="3" class="form-control"><%= listing.image.url %></textarea>
      <div class="invalid-feedback">Please enter a valid link for image</div>
    </div>

    <div class="row">
      <div class="md-3 col-md-4">
        <label for="listing[price]" class="form-label">Price: </label>
        <input type="number" name="listing[price]" value="<%= listing.price %>" class="form-control" required>
        <div class="invalid-feedback">Price should be valid</div>
      </div>

      <div class="md-3 col-md-8">
        <label for="listing[country]" class="form-label">Country: </label>
        <input type="text" name="listing[country]" value="<%= listing.country %>" class="form-control" required>
        <div class="invalid-feedback">Country name should be valid</div>
      </div>
    </div>

    <div class="md-3">
      <label for="listing[location]" class="form-label">Location: </label>
      <input type="text" name="listing[location]" value="<%= listing.location %>" class="form-control" required>
      <div class="invalid-feedback">Location should be valid</div>
    </div>

    <button class="btn btn-dark edit-btn mt-3">Edit</button>
  </form>
</div>
</div>